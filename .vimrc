execute pathogen#infect()

set nocompatible
filetype off

let g:gruvbox_italic=1
syntax on
set background=dark 
colorscheme gruvbox
filetype plugin indent on

set autoindent
set tabstop=4
set number
set expandtab
set relativenumber
set nowrap

set splitbelow
set splitright
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

set laststatus=2


