set ssl_starttls=yes
set ssl_force_tls=yes
set imap_user = "savingpvtbrian7@gmail.com"
set from= 'savingpvtbrian7@gmail.com'
set realname='Brian Hutchison'
set folder = imaps://imap.gmail.com/
set spoolfile = imaps://imap.gmail.com/INBOX
set postponed="imaps://imap.gmail.com/savingpvtbrian7/Drafts"
set header_cache = "~/.mutt/cache/headers"
set message_cachedir = "~/.mutt/cache/bodies"
set certificate_file = "~/.mutt/certificates"
set smtp_url = 'smtps://savingpvtbrian7@smtp.gmail.com:465/'
set move = no
set sort_aux=last-date-received
set sort_browser=reverse-date
set sort=threads
set sort_re
set imap_keepalive = 300
set mail_check = 120
auto_view text/html
alternative_order text/plain text/enriched text/html

set editor = "vi"

bind pager <up> previous-line #scroll inside the message rather than the index
bind pager <down> next-line

set sleep_time = 0 # be fast
set smart_wrap
mailboxes $Mail

color hdrdefault blue black
color quoted blue white
color signature black blue
color attachment black blue
color message black brightred
color error black brightred
color indicator brightyellow red
color status black blue
color tree black white
color normal white black
color markers red white
color search white black
color tilde brightmagenta white
color index black cyan ~F
color index red black "~N|~O"
